<%= form_for(@article) do |f| %>
  <div class="form-group">
    <p><%= f.label :title, "Enter a new title" %>
    <%= f.text_field :title, class: 'form-control'  %></p>

    <p><%= f.label :content, "Enter the article's content" %>
    <%= f.text_field :content, class: 'form-control' %></p>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-primary' %></p>
  </div>

<% end %>

